// As{{ $s.Name }} returns copy with only {{ $s.Name }} constructors.
func (s {{ template "slice_name" $f }}) As{{ $s.Name }}() (to {{ template "slice_name" $s }}) {
    for _, elem := range s {
        value, ok := elem.(*{{ $s.Name }})
        if !ok {
            continue
        }
        to = append(to, *value)
    }

    return to
}
